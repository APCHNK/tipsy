{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.60 | round: 0 }}px;
    background-color: {{ section.settings.section_background_color }};
  }

  .section-{{ section.id }}-padding .image-with-text__content .button {
    background: {{ section.settings.background_color }};
    color: {{ section.settings.color_text }};
    border-color: {{ section.settings.border_color }};
    box-shadow: 3px 3px {{ section.settings.border_color }};
  }

  .section-{{ section.id }}-padding .image-with-text__content .button:hover {
    border-color: transparent;
    background: {{ section.settings.border_color }};
    color: {{ section.settings.background_color }};
    box-shadow: 3px 3px {{ section.settings.background_color }};
  }

  .section-{{ section.id }}-padding .image-with-text__content .image-with-text__heading {
    letter-spacing: -0.4px;
    margin-top: {{ section.settings.mob_indent_top_title }}px;
    margin-bottom: {{ section.settings.mob_indent_bottom_title }}px;
    font-size: calc({{ section.settings.mob_size_title }}px + ({{ section.settings.desk_size_title }} - {{ section.settings.mob_size_title }}) * ((100vw - 375px) / (1440 - 375)));
  }

  .section-{{ section.id }}-padding .image-with-text__content .image-with-text__heading br {
    display: none;
  }

  .section-{{ section.id }}-padding .image-with-text__content .image-with-text__text {
    font-size: calc({{ section.settings.mob_size_text }}px + ({{ section.settings.desk_size_text }} - {{ section.settings.mob_size_text }}) * ((100vw - 375px) / (1440 - 375)));
  }

  .custom-image-with-text-{{ section.id }} .image-with-text {
    {% comment %}background: {{ section.settings.block_background_color }};

    border: 0.3rem solid {{ section.settings.block_border_color }};{% endcomment %}
    border-radius: {{ section.settings.block_border_radius | times: 0.66 | round: 0 }}px;

    {% comment %}box-shadow: 1rem 1rem 0 0 {{ section.settings.block_border_color }};{% endcomment %}
  }

  {%- if section.settings.block_border != blank -%}
    .custom-image-with-text-{{ section.id }} .image-with-text {
      {% comment %}border: 0.3rem solid {{ section.settings.block_border_color }};{% endcomment %}

      padding-top: 20px;
      padding-bottom: 43px;
      padding-left: 24px;
      padding-right: 24px;

      margin-right: 12px;

      position: relative;
    }

    .custom-image-with-text-{{ section.id }} .image-with-text:before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      left: 0;
      bottom: 0;
      border-radius: {{ section.settings.block_border_radius | times: 0.66 | round: 0 }}px;
      z-index: 2;
      background: {{ section.settings.block_background_color }};
      border: 3px solid {{ section.settings.block_border_color }};
    }

    .custom-image-with-text-{{ section.id }} .image-with-text:after {
      content: '';
      position: absolute;
      top: 1.1rem;
      right: -1.1rem;
      left: 1.1rem;
      bottom: -1.1rem;
      border-radius: {{ section.settings.block_border_radius | times: 0.66 | round: 0 }}px;
      z-index: 1;
      background: {{ section.settings.block_border_color }};
    }

  {%- endif -%}

  .custom-image-with-text-{{ section.id }} .image-with-text__media {
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  .custom-image-with-text-{{ section.id }} .image-with-text .image-with-text__media-item>* {
    background-color: #FFF6EE;
    display: block;
    border: none;
  }

  .custom-image-with-text-{{ section.id }}.custom-image-with-image-border .image-with-text .image-with-text__media-item>* {
    {% comment %}border-radius: {{ section.settings.image_border_radius | times: 0.66 | round: 0 }}px;
    box-shadow: 12px 12px {{ section.settings.image_border_color }} !important;
    border: 3px solid {{ section.settings.image_border_color }};{% endcomment %}
    margin-right: 12px;
    background-color: #FFF6EE;

  }

  .custom-image-with-text-{{ section.id }}.custom-image-with-image-border .image-with-text .image-with-text__media-item .image-with-text__media:before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    border-radius: 26px;
    z-index: 2;
    background: #FFF6EE;
    border: 3px solid #D55F4A;
  }

  .custom-image-with-text-{{ section.id }}.custom-image-with-image-border .image-with-text .image-with-text__media-item .image-with-text__media:after {
    content: '';
    position: absolute;
    top: 1.1rem;
    right: -1.1rem;
    left: 1.1rem;
    bottom: -1.1rem;
    border-radius: 26px;
    z-index: 1;
    background: #D55F4A;
  }

  .custom-image-with-text-{{ section.id }}.custom-image-with-image-border .image-with-text .global-media-settings {
  overflow: initial!important;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .section-{{ section.id }}-padding .image-with-text__content .image-with-text__heading {
      margin-top: {{ section.settings.desk_indent_top_title }}px;
      margin-bottom: {{ section.settings.desk_indent_bottom_title }}px;
    }

    .custom-image-with-text-{{ section.id }} .image-with-text {
      background: {{ section.settings.block_background_color }};
      border-radius: {{ section.settings.block_border_radius }}px;
      border-color: {{ section.settings.block_border_color }};
      padding-top: {{ section.settings.block_padding_top}}px;
      padding-bottom: {{ section.settings.block_padding_bottom }}px;
      padding-left: {{ section.settings.block_padding_left }}px;
      padding-right: {{ section.settings.block_padding_right }}px;
    }

    {%- if section.settings.block_border != blank -%}
      {% comment %}.custom-image-with-text-{{ section.id }} .image-with-text {
        box-shadow: 1.2rem 1.2rem 0 0 {{ section.settings.block_border_color }};
      }{% endcomment %}

      .custom-image-with-text-{{ section.id }} .image-with-text:before {
        border-radius: {{ section.settings.block_border_radius }}px;
      }

      .custom-image-with-text-{{ section.id }} .image-with-text:after {
        border-radius: 5.2rem;
      }
    {%- endif -%}

    .custom-image-with-text-{{ section.id }}.custom-image-with-image-border .image-with-text .image-with-text__media-item>* {
      {% comment %}box-shadow: 14px 14px {{ section.settings.image_border_color }} !important;
      border-radius: {{ section.settings.image_border_radius }}px;{% endcomment %}
      margin-right: 14px;
    }

    .custom-image-with-text-{{ section.id }}.custom-image-with-image-border .image-with-text .image-with-text__media-item .image-with-text__media:before {
      border-radius: 40px;
    }


    .custom-image-with-text-{{ section.id }}.custom-image-with-image-border .image-with-text .image-with-text__media-item .image-with-text__media:after {
      border-radius: 52px;
    }

    .section-{{ section.id }}-padding .image-with-text__content .image-with-text__heading br {
      display: block;
    }
  }

  @media screen and (min-width: 1301px) {
    .section-{{ section.id }} .page-width {
        padding: 0;
    }

    .custom-image-with-text .image-with-text__content {
      padding-left: {{ section.settings.left_indent }}px!important;
    }
  }

  @media screen and (min-width: 1441px) {
    .section-{{ section.id }}-padding .image-with-text__content .image-with-text__heading {
      font-size: {{ section.settings.desk_size_title }}px;
    }

    .section-{{ section.id }}-padding .image-with-text__content .image-with-text__text {
      font-size: {{ section.settings.desk_size_text }}px;
    }
  }

{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout == 'no-overlap'
    assign remove_color_classes = true
  endif
-%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }} custom-image-with-text-{{ section.id }} custom-image-with-text custom-image-with-image-{%- if section.settings.image_border != blank -%}border{%- endif -%}">
  <div class="page-width">
    <div class="image-with-text image-with-text--{{ section.settings.content_layout }} isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %}{% unless section.settings.color_scheme == section.settings.section_color_scheme and settings.media_border_thickness > 0 and settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0 %} collapse-corners{% endunless %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} {% if section.settings.block_border %} block-border{% endif %}">
      <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %}">
        <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item">
          <div
            class="image-with-text__media image-with-text__media--{{ section.settings.height }} global-media-settings{% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}{% if section.settings.image != blank %} media{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %} "
            {% if section.settings.height == 'adapt' and section.settings.image != blank %}
              style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
            {% endif %}
          >
            {%- if section.settings.image != blank -%}
              {%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
                {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
                {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
              (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
            {%- endcapture -%}
              {%- else -%}
                {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
              (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
            {%- endcapture -%}
              {%- endif -%}
              {{
                section.settings.image
                | image_url: width: 1500
                | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
              }}
            {% comment %}{%- else -%}
              {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}{% endcomment %}
            {%- endif -%}
          </div>
        </div>
        <div class="image-with-text__text-item grid__item">
          <div
            id="ImageWithText--{{ section.id }}"
            class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} content-container{% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}"
          >
            {%- for block in section.blocks -%}
              {% case block.type %}
                {%- when 'heading' -%}
                  <h2
                    class="image-with-text__heading inline-richtext {{ block.settings.heading_size }}"
                    style="color: {{ block.settings.heading_color }}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.heading }}
                  </h2>
                {%- when 'caption' -%}
                  <p
                    class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.caption | escape }}
                  </p>
                {%- when 'text' -%}
                  <div class="image-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                    {{ block.settings.text }}
                  </div>
                {%- when 'button' -%}
                  {%- if block.settings.button_label != blank -%}
                    <a
                      {% if block.settings.button_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link }}"
                      {% endif %}
                      class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.button_label | escape }}
                    </a>
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

