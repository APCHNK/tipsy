@media screen and (max-width: 1040px) {
  .sec1 {
    flex-direction: column-reverse;
  }
  .summary_block {
    margin-left: 0;
    max-width: unset;
    margin-bottom: 32px;
  }
}
@media screen and (max-width: 989px) {
  .sec1 {
    padding-left: 16px;
    padding-right: 16px;
  }
  .cart:before {
    left: 0;
  }
  .block {
    padding-right: 16px;
  }
}
@media screen and (max-width: 600px) {
  .cart .items .item .image {
    height: 75px;
  }
  .cart .items .item .product_info .product_info-top {
    flex-direction: column;
  }
  .product_info-center,
  .product_info-rigth {
    gap: 5px;
    flex-direction: row-reverse;
    align-items: flex-end;
    justify-content: start;
  }
  .product_title {
    width: unset;
  }
  .product_info .product_info-bot {
    margin-top: 3px;
  }
}
@media screen and (max-width: 480px) {
  .cart .items .item .image {
    height: 48px;
    width: 52px;
  }
  .cart .items .item .product_info {
    margin-left: 0;
  }
  .cart {
    padding: 24px;
  }
  .product_title {
    color: var(--black, #1C1C1C);
    font-family: Birdie;
    font-size: 10px;
    font-style: normal;
    font-weight: 400;
    line-height: 12px;
  }
  .product_categorie {
    margin-top: 0;
    color: var(--accent-blue-100, #1F4692);
    font-family: Birdie;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: 15px;
  }
  .product_info-center .text,
  .product_info-rigth .text {
    color: var(--accent-blue-100, #1F4692);
    font-family: Birdie;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: 15px;
  }
  .product_info-center .size,
  .product_info-rigth .size {
    color: var(--black, #1C1C1C);
    font-family: Birdie;
    font-size: 10px;
    font-style: normal;
    font-weight: 400;
    line-height: 12px;
  }
  .product_info .product_info-bot p {
    color: var(--accent-blue-100, #1F4692);
    font-family: Birdie;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: 15px;
  }
  .product_info .product_info-bot span {
    color: var(--black, #1C1C1C);
    font-family: Birdie;
    font-size: 10px;
    font-style: normal;
    font-weight: 400;
    line-height: 12px;
  }
  .cart_title {
    font-size: 18px;
    font-style: normal;
    font-weight: 700;
    line-height: 27px;
  }
  .quantity_element {
    width: 70px;
    padding: 6px 8px;
  }
  .right_elements a svg {
    height: 20px;
  }
  .summary_block {
    padding: 24px;
  }
  .summary_block .title {
    text-align: unset;
  }
}