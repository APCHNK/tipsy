@import url("https://fonts.cdnfonts.com/css/birdie");
@import url("https://db.onlinewebfonts.com/c / 72bc3c6b00e72d272eb79ee0d69ce103?family=New+Spirit+Regular");
.sec2,
.sec3 {
  display: flex;
  justify-content: center;
  font-family: "Birdie"
  , sans-serif;
  padding-left: 50px;
  padding-right: 50px;
}
.sec3 {
  margin-bottom: 130px;
  margin-top: 56px;
}
#MainContent {
  background: var(--white, #fffcfa);
  background-image: url('{{'bg_faq2.svg' | asset_url}}');
  background-repeat: no-repeat;
  background-position: bottom;
  background-size: contain;
}
.sec2 {
  padding-bottom: 100px;

  background-image: url('{{'bg_faq.svg' | asset_url}}');
  background-repeat: no-repeat;
  background-position: bottom;
  background-size: cover;
}
.sec3 .container {
  padding-right: 12px;
}
.sec2 .container {
  margin-top: 240px;
}
.container {
  width: 100%;
  max-width: 1280px;

  display: flex;
  flex-direction: column;
  align-items: center;
}
.block {
  position: relative;
  width: 100%;
  z-index: 1;
}
.content {
  width: 100%;
  height: 100%;
  border-radius: 40px;
  border: 3px solid var(--accent-blue-100, #1f4692);
  background: var(--white, #fffcfa);
  padding: 40px;
  z-index: 4;
  display: flex;
  flex-direction: column;
  gap: 54px;
}
.content:before {
  position: absolute;
  content: "";
  border-radius: 46px;
  background: var(--accent-blue-100, #1f4692);
  height: 100%;
  width: 100%;
  z-index: -1;
  top: 12px;
  left: 12px;
}
.hours_block .title {
  color: var(--accent-red-100, #d55f4a);
  font-family: "NewSpiritBold";
  font-size: 32px;
  font-style: normal;
  font-weight: 700;
  line-height: normal;
  margin-bottom: 24px;
  margin-top: 0;
}
.content .items {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 10px;
}
.content .items .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 12px;
  border: 1px solid var(--stroke-white-blue, #dddfe6);
  padding: 12px;
  width: 100%;
  max-width: 150px;
}
.content .items .item .day {
  color: var(--accent-blue-100, #1f4692);
  text-align: center;
  font-family: "NewSpiritBold";
  font-size: 24px;
  font-style: normal;
  font-weight: 700;
  line-height: 28px;
  /* 116.667% */
}
.content .items .item .time,
.content .items .item .subtime {
  color: var(--black, #1c1c1c);
  text-align: center;
  font-family: Birdie;
  font-size: 12px;
  font-style: normal;
  font-weight: 400;
  line-height: 18px;
  /* 150% */
}
.block_weare {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  width: 100%;
  max-width: 535px;
  border-radius: 32px;
  background: var(--accent-blue-100, #1f4692);
  margin-bottom: 40px;
  gap: 10px;

}
.block_weare span {
  color: var(--white, #fffcfa);
  text-align: center;
  font-family: "NewSpiritBold";
  font-size: 32px;
  font-style: normal;
  font-weight: 700;
  line-height: normal;
}
.block_weare p {
  color: var(--white, #fffcfa);
  text-align: center;
  font-family: Birdie;
  font-size: 24px;
  font-style: normal;
  font-weight: 400;
  line-height: 36px;
  /* 150% */
  margin: 0;
  padding: 0;
}
.title_main {
  position: relative;
  max-width: 585px;
  text-align: center;
  z-index: 5;
}
.title_main span {
  color: var(--accent-yellow-100, #f4be18);
  text-align: center;
  font-family: "NewSpiritBold";
  font-size: 60px;
  font-style: normal;
  font-weight: 700;
  line-height: 78px;
  /* 130% */
  width: 100%;
  max-width: 585px;
}
.title_main .text2 {
  color: var(--accent-blue-100, #1f4692);
  position: absolute;
  top: 4px;
  left: 4px;
  z-index: -1;
}
@media screen and (max-width: 989px) {
  .sec2,
  .sec3 {
    padding-left: 16px;
    padding-right: 16px;
  }
}

@media screen and (max-width: 870px) {
  .sec2 {
    padding-bottom: 160px;
  }
  .sec2 .container {
    margin-top: 170px;
  }
  .content .items {
    flex-direction: column;
  }
  .content .items .item {
    flex-direction: row;
    max-width: unset;
    justify-content: space-between;
  }
  .subtime {
    display: none;
  }
}
@media screen and (max-width: 768px) {
  .title_main span {
    font-size: 32px;
    line-height: normal;
    max-width: 340px;
  }
  .title_main {
    max-width: 340px;
  }
}
@media screen and (max-width: 425px) {
  .sec2 {
    padding-bottom: 70px;
  }
  .sec2 .container {
    margin-top: 130px;
  }
  .sec3 {
    margin-top: 30px;
  }
  .block_weare {
    padding: 12px;
  }
  .block_weare span {
    color: var(--white, #FFFCFA);
    text-align: center;
    font-size: 19px;
    font-style: normal;
    font-weight: 700;
    line-height: 24px;

  }
  .block_weare p {
    color: var(--white, #FFFCFA);
    text-align: center;
    font-family: Birdie;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 21px;

  }
  .content {
    padding: 24px;
  }
  .content .items .item .day {
    color: var(--accent-blue-100, #1F4692);
    font-size: 14px;
    font-style: normal;
    font-weight: 700;
    line-height: 21px;
    /* 150% */
  }
  .content .items .item .time {
    color: var(--black, #1C1C1C);
    text-align: right;

    /* birdie/12 */
    font-family: Birdie;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: 18px;
    /* 150% */
  }
  .content .items .item {
    padding: 12px;
  }
}